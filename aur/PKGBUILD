# Maintainer: copyleftdev <donj@codetestcode.io>
pkgname=unflare
pkgver=0.1.0
pkgrel=1
pkgdesc="High-performance Cloudflare intelligence toolkit written in Zig"
arch=('x86_64')
url="https://github.com/copyleftdev/unflare"
license=('MIT')
depends=('openssl')
makedepends=('zig>=0.14')
source=("$pkgname-$pkgver.tar.gz::https://github.com/copyleftdev/unflare/archive/v$pkgver.tar.gz")
sha256sums=('SKIP')  # Update with actual sha256

build() {
    cd "$pkgname-$pkgver"
    zig build -Doptimize=ReleaseSafe
}

package() {
    cd "$pkgname-$pkgver"
    install -Dm755 "zig-out/bin/unflare" "$pkgdir/usr/bin/unflare"
    install -Dm644 "LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    install -Dm644 "README.md" "$pkgdir/usr/share/doc/$pkgname/README.md"
}
